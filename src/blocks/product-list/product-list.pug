//- Все примеси в этом файле должны начинаться c имени блока (product-list)

mixin product-list(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +product-list('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' product-list--' + modsList[i].trim();
      }
    }

  .product-list.slider(class=allMods)&attributes(attributes)
    .product-list__inner
      block
