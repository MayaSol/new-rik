//- Все примеси в этом файле должны начинаться c имени блока (info-item)

mixin info-item(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' info-item--' + modsList[i].trim();
      }
    }

  .info-item(class=allMods)&attributes(attributes)
    block
