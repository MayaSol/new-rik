//- Все примеси в этом файле должны начинаться c имени блока (svg)

mixin svg(icon='', classes, mods)

  -
    // список модификаторов
    var allMods = '';
    if (!(typeof classes === 'unefined') && classes ) {
      allMods = classes;
    }
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' svg--' + modsList[i].trim();
      }
    }

  svg(class=allMods)&attributes(attributes)
    use(xlink:href="img/sprite.svg#" + icon)
