//- Все примеси в этом файле должны начинаться c имени блока (svg)

mixin svg(icon='', classes, sizes={width:'30',height:'30'},mods,inline=false)
  //- +svg('warning','',{width:45,height:43})(class='article__note-icon fill-slate-400')

  -
    // список модификаторов
    var allMods = "";
    if (!(typeof classes === "unefined") && classes ) {
      allMods = classes;
    }
    if(typeof(mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " svg--" + modsList[i].trim();
      }
    }

    var href = '';
    if (inline) {
      href = "#" + icon;
    } else {
      href = "/img/sprite.svg#" + icon;
    }

  svg(class=allMods width=sizes.width height=sizes.height aria-hidden='true' focusable='false')&attributes(attributes)
    use(xlink:href=href)
