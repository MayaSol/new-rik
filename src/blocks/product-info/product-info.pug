//- Все примеси в этом файле должны начинаться c имени блока (product-info)

mixin product-info(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +product-info('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' product-info__list--' + modsList[i].trim();
      }
    }

  .product-info(class=allMods)&attributes(attributes)
    block


mixin product-info-text(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
