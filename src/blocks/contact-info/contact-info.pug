//- Все примеси в этом файле должны начинаться c имени блока (contact-info)

mixin contact-info(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +contact-info('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' contact-info--' + modsList[i].trim();
      }
    }

  .contact-info(class=allMods)&attributes(attributes)
    .contact-info__inner
      block
