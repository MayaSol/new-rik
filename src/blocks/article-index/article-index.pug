mixin article-index-tab(props={}, mods)

  //- id
  //isActive

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' article-index__content-item' + modsList[i].trim();
      }
    }
    if (props.isActive) {
      allMods = allMods + ' article-index__content-item--active';
    }

  ul.article-index__content-item(class=allMods id=props.id role="tabpanel")&attributes(attributes)


