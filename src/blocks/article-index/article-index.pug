mixin article-index(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' article-index--' + modsList[i].trim();
      }
    }

  .article-index(class=allMods)&attributes(attributes)
    block

mixin article-index-alphabet(props={}, mods)

  -
