//- Все примеси в этом файле должны начинаться c имени блока (cure)

mixin cure(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' cure--' + modsList[i].trim();
      }
    }

  .cure(class=allMods)&attributes(attributes)
    .cure__inner
      block
