//- Все примеси в этом файле должны начинаться c имени блока (rating)

mixin rating(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' rating--' + modsList[i].trim();
      }
    }

  .rating(class=allMods)&attributes(attributes)
    .rating__inner
      block
