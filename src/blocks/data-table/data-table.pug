//- Все примеси в этом файле должны начинаться c имени блока (data-table)

mixin data-table(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' data-table--' + modsList[i].trim();
      }
    }

  .data-table(class=allMods)&attributes(attributes)
    block
