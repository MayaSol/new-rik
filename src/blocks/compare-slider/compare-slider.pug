//- Все примеси в этом файле должны начинаться c имени блока (compare-slider)

mixin compare-slider(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' compare-slider--' + modsList[i].trim();
      }
    }

  .compare-slider(class=allMods)&attributes(attributes)
    block


mixin compare-slider-content(props={})

  -
    var propsAfter;
    if (!(typeof props.icon === 'undefined')) {
      propsAfter = {icon: props.icon};
    }

  .compare-slider__after&attributes(attributes)
    .compare-slider__content.compare-slider__content--after
      block
    +compare-slider-after(propsAfter)


mixin compare-slider-after(props={icon: 'hospital'})

  .compare-slider__before&attributes(attributes)
    .compare-slider__content.compare-slider__content--before
      +compare-card()
        .compare-card__title Лечение лазером в&nbsp;стоматологической клинике
        .compare-card__content
          +svg(props.icon,'compare-card__icon',{width: 99, height: 88})
          .compare-card__price
            span.compare-card__price-val 500-4000₽
            span.compare-card__price-unit /сеанс *
          span.compare-card__subtitle Минусы лечения в клинике:
          .compare-card__list.compare-card__list--minus
            .compare-card__list-item Закрываете одну конкретную проблему
            .compare-card__list-item Надо подгадывать время для визита
            .compare-card__list-item Тратите деньги и время на дорогу
            .compare-card__list-item Стоять в пробке/толкаться в транспорте
          .compare-card__add * в зависимости от заболевания

