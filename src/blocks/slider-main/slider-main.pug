//- Все примеси в этом файле должны начинаться c имени блока (slider-main)

mixin slider-main(props, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +hystory-slider('Текст', 'some-mod')

  -
    if(typeof(props) === 'undefined') {
      var props = {};
    }
    // список модификаторов блока .slider-wrapper
    if (typeof(props.class) !== 'undefined' && props.class) {
      var allWrapperMods = props.class;
    }
    else {
      allWrapperMods = '';
    }
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allWrapperMods = allWrapperMods + ' slider-main__wrapper--' + modsList[i].trim();
      }
    }
    // список модификаторов блока .slider
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' slider-main--' + modsList[i].trim();
      }
    }

  .slider-main__wrapper(class=allWrapperMods)
    .slider-main__inner
      .slider-main.slider(class=allMods)&attributes(attributes)
        block
      // +cart('has-goods')(class="xl_hidden")

mixin slider-item(props)

  -
    if (typeof(props) == 'undefined')
      props = {};

  .slider-main__item&attributes(attributes)
    .slider-main__item-inner
      block


mixin slider-item--main(props)

  -
    if (typeof(props) == 'undefined')
      props = {};

  .slider-main__item.slider-item&attributes(attributes)
    .slider-main__item-inner
      .slider-main__media.slider-main__media--video-bg
          video(width=props.width height=props.height preload="none" poster="video/" + props.poster muted)
            source(src=props.url type=props.type)
          .slider-main__btn-play
      .container.lg_flex.lg_flex-col.lg_justify-center.lg_px-64px.xl_block.xl_pl-130px.xl_pr-60px.xxl_pl-180px.xxl_pr-80px
        block

