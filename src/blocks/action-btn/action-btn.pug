//- Все примеси в этом файле должны начинаться c имени блока (action-btn)

mixin action-btn(font, icon, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +action-btn('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' action-btn--' + modsList[i].trim();
      }
    }

  button.action-btn(class=allMods)&attributes(attributes)
    i(class="fa-" + font + " fa-"+icon)
