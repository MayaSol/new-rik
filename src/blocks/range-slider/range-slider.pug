//- Все примеси в этом файле должны начинаться c имени блока (range-slider)

mixin range-slider(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' range-slider--' + modsList[i].trim();
      }
    }

  .range-slider(class=allMods)&attributes(attributes)
    block
