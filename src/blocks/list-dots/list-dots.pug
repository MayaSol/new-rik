//- Все примеси в этом файле должны начинаться c имени блока (list-dots)

mixin list-dots(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' list-dots--' + modsList[i].trim();
      }
    }

  ul.list-dots(class=allMods)&attributes(attributes)
    block
