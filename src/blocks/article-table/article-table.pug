//- Все примеси в этом файле должны начинаться c имени блока (article-table)

mixin article-table(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' article-table--' + modsList[i].trim();
      }
    }

  .article-table(class=allMods)&attributes(attributes)
    .article-table__inner
      block
