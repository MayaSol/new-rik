//- Все примеси в этом файле должны начинаться c имени блока (features)

mixin features(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +features('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' features--' + modsList[i].trim();
      }
    }

  .features(class=allMods)&attributes(attributes)
    .features__list
      block


mixin features-item(props={},mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' features--' + modsList[i].trim();
      }
    }

  .features__item.slider-card(class=allMods)&attributes(attributes)
    .features__item-inner.slider-card__inner
      .features__icon.mr-10px.xxl_mr-20px
        +svg(props.icon,props.iconClasses)
      .features__header!= props.title
      .features__text!= props.text
        block
