extends ../pug/layout.pug

block meta
  title Оформление заказа
  meta(name='description', content='')

block append head
  link(rel='stylesheet', href='css/cart-payment.css')

block vars
  -
    var pageName = 'cart';

block content
  .wrapper
    +breadcrumbs(class='container')
      +breadcrumbs-item('Главная','#')
      +breadcrumbs-item('Мои заказы')
    section.cart-page.mt-30px.lg_mt-20px
      .container
        #bx-soa-tanais-order-form
          h2.section__title.section__title--product-info.mb-20px Оформление заказа
          .cart-page__pane
            +btn-angle-left({text: 'Вернуться в корзину'})(class='cart-page__back' href='#')
          .cart-steps
            +steps({},'cart-steps')
              +steps-nav()
                +steps-nav-button({
                  id: 'tab-button-01',
                  target_id: '#tab-content-01',
                  selected: 'true',
                  classes: 'active',
                })
                  span.steps__nav-num 01
                  span Покупатель
                +steps-nav-button({
                  id: 'tab-button-02',
                  target_id: '#tab-content-02',
                  selected: 'false',
                  classes: 'disabled'
                })
                  span.steps__nav-num 02
                  span Доставка
                +steps-nav-button({
                  id: 'tab-button-03',
                  target_id: '#tab-content-03',
                  selected: 'false',
                  classes: 'disabled'
                })
                  span.steps__nav-num 03
                  span Оплата
              +steps-content({id: 'cart-tabContent'})
                form.tanais-order#bx-soa-tanais-order-form(action="/personal/cart/" method="POST" name="ORDER_FORM" enctype="multipart/form-data")
                  +tabs-content-pane({
                    id: 'tab-content-01',
                    link_id: 'tab-button-01',
                    tabindex: '0',
                    classes: 'show active'
                  })
                    .steps__content
                      <div class="tanais-form-group person-type">
                        <div class="tanais-radio-inline checked">
                          <label><input type="radio" checked="true" name="PERSON_TYPE" value="1">Физическое лицо</label>
                        </div>
                        <div class="tanais-radio-inline">
                          <label><input type="radio" name="PERSON_TYPE" value="2">Юридическое лицо</label>
                        </div>
                        <input type="hidden" name="PERSON_TYPE_OLD" value="2">
                        </div>
                      //- Покупатель
                      +cart-buyer()
                      +btn('<span>Дальше</span><svg width="8" height="16" aria-hidden="true" focusable="false"><use xlink:href="/img/sprite.svg#angle-right"></use></svg>','regular,blue,icon,icon-right')(class='rounded-4px')(class="steps__next-btn")
                  +tabs-content-pane({
                    id: 'tab-content-02',
                    link_id: 'tab-button-02',
                    tabindex: '1',
                  })
                    .steps__content
                      <div class="bx_soa_location">
                        <div data-property-id-row="4" class="tanais-form-group bx-soa-location-input-container">
                          <label class="bx-soa-custom-label" for="soa-property-4"><span class="bx-authform-starrequired">*</span> Город</label>
                          <div id="sls-40005" class="bx-sls ">
                            <div class="dropdown-block bx-ui-sls-input-block tanais-form-control">
                              <span class="dropdown-icon"></span>
                              <input type="text" autocomplete="off" name="ORDER_PROP_4" value="" class="dropdown-field" placeholder="Введите название ..." style="display: none;">
                              <div style="margin: 0px; padding: 0px; border: medium none; position: relative;" class="bx-ui-sls-container"><input type="text" disabled="disabled" autocomplete="off" class="bx-ui-sls-route" style="padding: 0px; margin: 0px;"><input type="text" autocomplete="off" value="" class="bx-ui-sls-fake" placeholder="Введите название ..."></div>
                              <div class="dropdown-fade2white"></div>
                              <div class="bx-ui-sls-loader"></div>
                              <div class="bx-ui-sls-clear" title="Отменить выбор" style="display: none;"></div>
                              <div class="bx-ui-sls-pane" style="overflow: hidden auto;">
                                <div class="bx-ui-sls-variants"></div>
                              </div>
                            </div>
                            <div class="bx-ui-sls-error-message">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="single-container ">
                        <!--  DELIVERY BLOCK  -->
                        <div id="bx-soa-delivery" data-visited="true" class="bx-soa-section bx-active">
                          <div class="bx-soa-section-content container-fluid">
                            <div style="display: none;" class="alert alert-danger"></div>
                            <div class="bx-soa-pp">
                              <div class="bx-soa-pp-item-container">
                                <div id="bx_soa_item_delivery_id_27" class="bx-soa-pp-company">
                                  <div class="bx-soa-pp-company-inner-block">
                                    <div class="bx-soa-pp-company-graf-container has-delivery-cost"><input id="ID_DELIVERY_ID_27" name="DELIVERY_ID" type="checkbox" class="bx-soa-pp-company-checkbox" value="27" checked><span class="style-checkbox"></span>
                                      <div class="bx-soa-pp-company-smalltitle"><span>Курьерская доставка (Major Express, СДЭК)</span></div>
                                      <div class="bx-soa-pp-delivery-cost">бесплатно</div>
                                    </div>
                                    <div class="bx-soa-pp-company-smalldescr"><b>При 100% предоплате</b>. Курьер нашего партнёра только доставляет Вам заказанный товар. Передача товара от курьера возможна только после оплаты. При обнаружении впоследствии какого-либо дефекта или неисправности действовать следует в соответствии с правилами гарантийного ремонта.</div>
                                  </div>
                                  <div class="bx-soa-pp-desc-container">
                                    <div class="bx-soa-pp-company">
                                      <div class="bx-soa-pp-company-block"></div>
                                      <ul class="bx-soa-pp-list">
                                        <li>
                                          <div class="bx-soa-pp-list-termin">Срок доставки:</div>
                                          <div class="bx-soa-pp-list-description"> от 2 до 12 дней </div>
                                        </li>
                                      </ul>
                                    </div>
                                  </div>
                                </div>
                                <div id="bx_soa_item_delivery_id_4" class="bx-soa-pp-company">
                                  <div class="bx-soa-pp-company-inner-block">
                                    <div class="bx-soa-pp-company-graf-container has-delivery-cost"><input id="ID_DELIVERY_ID_4" name="DELIVERY_ID" type="checkbox" class="bx-soa-pp-company-checkbox" value="4"><span class="style-checkbox"></span>
                                      <div class="bx-soa-pp-company-smalltitle"><span>Самовывоз при производстве</span></div>
                                      <div class="bx-soa-pp-delivery-cost">бесплатно</div>
                                    </div>
                                    <div class="bx-soa-pp-company-smalldescr">Самовывоз с нашего центрального склада: 111020, Москва, ул. Боровая, д. 7, стр. 7<br> Подробная схема проезда и карта в разделе "<a href="/contacts/" title="Схема проезда на склад, РИКТАМЕД - адрес" target="_blank">Контакты</a>".</div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div id="bx-soa-properties" data-visited="true" class="bx-soa-section bx-active">
                        <div class="delivery-data">
                          <div class="tanais-form-group bx-soa-customer-field" data-property-id-row="86"><label for="soa-property-86" class="bx-soa-custom-label">Индекс</label><div class="soa-property-container"><input type="text" size="30" name="ORDER_PROP_86" id="soa-property-86" placeholder="" class="tanais-form-control bx-soa-customer-input bx-ios-fix"></div></div>
                          <div class="tanais-form-group bx-soa-customer-field" data-property-id-row="6"><label for="soa-property-6" class="bx-soa-custom-label">Улица, дом</label><div class="soa-property-container has-soa-address-suggest"><input type="text" size="30" name="ORDER_PROP_6" id="soa-property-6" autocomplete="new-password" placeholder="" class="tanais-form-control bx-soa-customer-input bx-ios-fix"><span class="soa-suggests-container"><span class="soa-suggests-block"></span></span></div></div>
                        </div>
                      </div>
                      <div class="pickup-data">
                          <div id="pickup-map">
                          </div>
                      </div>
                      +btn('<span>Дальше</span><svg width="8" height="16" aria-hidden="true" focusable="false"><use xlink:href="/img/sprite.svg#angle-right"></use></svg>','regular,blue,icon,icon-right')(class='rounded-4px')(class="steps__next-btn")
                  +tabs-content-pane({
                    id: 'tab-content-03',
                    link_id: 'tab-button-03',
                    tabindex: '2',
                  })
                    <!--  PAY SYSTEMS BLOCK -->
                    <div id="bx-soa-paysystem" data-visited="true" class="bx-soa-section bx-active">
                      <div class="bx-soa-section-title-container">
                        <h2 class="bx-soa-section-title">
                          <span class="bx-soa-section-title-icon">
                            <svg width="30" height="28" viewBox="0 0 30 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M10.2933 13.9379H25.356C26.8712 13.9379 28.1175 12.7184 28.1175 11.1879V2.74999C28.1175 1.23117 26.8835 0 25.3554 0H10.2933C8.76748 0 7.53174 1.22883 7.53174 2.74999V11.1873C7.53115 12.7224 8.78272 13.9379 10.2933 13.9379ZM9.28897 2.74999C9.28897 2.1986 9.73662 1.75047 10.2927 1.75047H25.3554C25.9114 1.75047 26.3591 2.1986 26.3591 2.74999V3.74952H9.28897V2.74999ZM9.28897 5.50057H26.3591V11.1879C26.3591 11.7451 25.9044 12.1874 25.3554 12.1874H10.2933C9.746 12.1874 9.28955 11.7468 9.28955 11.1879L9.28897 5.50057Z" fill="#F89A1C"></path>
