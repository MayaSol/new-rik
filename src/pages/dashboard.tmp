extends ../pug/layout.pug

block meta
  title Профиль пользователя
  meta(name='description', content='')

//- block append head
//-   link(rel='stylesheet', href='css/some.css')

block vars
  -
    var pageName = 'user';

block content
  .wrapper
    +breadcrumbs(class="container")
      +breadcrumbs-item('Главная','#')
      +breadcrumbs-item('Основная информация')
    #bx_basketFKauiI.bx-basket.bx-opener
      +cart-aside(class='hidden xl_block')
    section.profile.mt-30px.lg_mt-20px.mb-50px
      .profile__content.container
        h1.section__title.mb-20px.lg_mb-40px Основная информация
        .choices-select.field-select__wrapper.lg_hidden.mb-20px
          select#profile-page-select.profile__page-select.page-select__input.field-select(role='tablist')
            option(value='/company.html#1' data-icon="dashboard") Основная информация
            option(value='/company.html#1' data-icon="person" selected) Личные данные
            option(value='/company.html#2' data-icon="receipt") Мои заказы
            option(value='/company.html#3' data-icon="device") Мои аппараты
            option(value='/company.html#4' data-icon="book") Методики лечения
            option(value='/company.html#5' data-icon="setting") Сервис
            option(value='/company.html#6' data-icon="message") Обратная связь
        .profile-links.profile__links.hidden.lg_block
          +profile-links-item({
            icon: 'dashboard',
            icon_width: '20',
            icon_height: '20',
            text: 'Основная информация',
            isActive: true
          })
          +profile-links-item({
            icon: 'person',
            icon_width: '20',
            icon_height: '20',
            text: 'Личные данные',
          })
          +profile-links-item({
            icon: 'receipt',
            icon_width: '19',
            icon_height: '22',
            text: 'Мои заказы',
          })
          +profile-links-item({
            icon: 'device',
            icon_width: '24',
            icon_height: '25',
            text: 'Мои аппараты',
          })
          +profile-links-item({
            icon: 'book',
            icon_width: '21',
            icon_height: '20',
            text: 'Методики лечения',
          })
          +profile-links-item({
            icon: 'setting',
            icon_width: '22',
            icon_height: '21',
            text: 'Сервис',
          })
          +profile-links-item({
            icon: 'message',
            icon_width: '22',
            icon_height: '22',
            text: 'Обратная связь',
          })
        .profile__main.dashboard
          .dashboard__section
            .dashboard__header
              h2.dashboard__title Последние заказы
              +btn('Все заказы','regular,blue')(class='profile__show-all' href='#')
            +orders
              +orders-item({
                status: 'Оплачено',
                title: 'Заказ NP-88/2022 от 01.06.2022,',
                amount: '1 товар на сумму 30 600 руб'
              },'paid')
              +orders-item({
                status: 'Новый заказ',
                title: 'Заказ NP-88/2022 от 01.06.2022,',
                amount: '1 товар на сумму 30 600 руб'
              },'new')
              +orders-item({
                status: 'Принят в обработку',
                title: 'Заказ NP-88/2022 от 01.06.2022,',
                amount: '1 товар на сумму 30 600 руб'
              },'accepted')
            .dashboard__header
              h2.dashboard__title Последние зарегистрированные аппараты
              +btn('Все аппараты','regular,blue')(class='profile__show-all' href='#')
            .data-table__list
              .data-table.data-table--one-line.data-table--devices.mb-20px
                .data-table__th.row-start-1.lg_row-start-1(class='lg_!col-start-1')
                  span Модель
                .data-table__th.row-start-2.lg_row-start-1(class='lg_!col-start-2')
                  span Серийный<br> номер
                .data-table__th.row-start-3.lg_row-start-1(class='lg_!col-start-3')
                  span Дата окончания<br> гарантии
                .data-table__th.row-start-4.lg_row-start-1(class='lg_!col-start-4')
                  span Проведенный ремонт<br> дата/гарантийный/платный
                .data-table__td.row-start-1.lg_row-start-2(class='lg_!col-start-1')
                  span Рикта&nbsp;04/04
                .data-table__td.row-start-2.lg_row-start-2(class='lg_!col-start-2')
                  span NP-131/2022
                .data-table__td.row-start-3.lg_row-start-2(class='lg_!col-start-3')
                  span 24.02.2023
                .data-table__td.row-start-4.lg_row-start-2(class='lg_!col-start-4')
                  span Гарантийный<br>14.01.2022
              .data-table.data-table--one-line.data-table--devices.mb-20px
                .data-table__th.row-start-1.lg_row-start-1(class='lg_!col-start-1')
                  span Модель
                .data-table__th.row-start-2.lg_row-start-1(class='lg_!col-start-2')
                  span Серийный<br> номер
                .data-table__th.row-start-3.lg_row-start-1(class='lg_!col-start-3')
                  span Дата окончания<br> гарантии
                .data-table__th.row-start-4.lg_row-start-1(class='lg_!col-start-4')
                  span Проведенный ремонт<br> дата/гарантийный/платный
                .data-table__td.row-start-1.lg_row-start-3(class='lg_!col-start-1')
                  span Рикта&nbsp;02/04
                .data-table__td.row-start-2.lg_row-start-3(class='lg_!col-start-2')
                  span NP-131/2022
                .data-table__td.row-start-3.lg_row-start-3(class='lg_!col-start-3')
                  span 24.02.2023
                .data-table__td.row-start-4.lg_row-start-3(class='lg_!col-start-4')
                  span Платный<br>14.01.2022
              .data-table.data-table--one-line.data-table--devices.mb-20px
                .data-table__th.row-start-1.lg_row-start-1(class='lg_!col-start-1')
                  span Модель
                .data-table__th.row-start-2.lg_row-start-1(class='lg_!col-start-2')
                  span Серийный<br> номер
                .data-table__th.row-start-3.lg_row-start-1(class='lg_!col-start-3')
                  span Дата окончания<br> гарантии
                .data-table__th.row-start-4.lg_row-start-1(class='lg_!col-start-4')
                  span Проведенный ремонт<br> дата/гарантийный/платный
                .data-table__td.row-start-1.lg_row-start-4(class='lg_!col-start-1')
                  span Рикта&nbsp;04/04
                .data-table__td.row-start-2.lg_row-start-4(class='lg_!col-start-2')
                  span NP-131/2022
                .data-table__td.row-start-3.lg_row-start-4(class='lg_!col-start-3')
                  span 24.02.2023
                .data-table__td.row-start-4.lg_row-start-4(class='lg_!col-start-4')
                  span Гарантийный<br>14.01.2022
            .dashboard__header
              h2.dashboard__title Последние ремонты
              +btn('Все ремонты','regular,blue')(class='profile__show-all' href='#')
            .data-table__list
              .data-table.data-table--one-line.data-table--service.mb-20px
                .data-table__th.row-start-1.lg_row-start-1(class='lg_!col-start-1')
                  span Модель
                .data-table__th.row-start-2.lg_row-start-1(class='lg_!col-start-2')
                  span Серийный<br> номер
                .data-table__th.row-start-3.lg_row-start-1(class='lg_!col-start-3')
                  span Дата сдачи<br> в ремонт
                .data-table__th.row-start-4.lg_row-start-1(class='lg_!col-start-4')
                  span Причина обращения
                .data-table__th.row-start-5.lg_row-start-1(class='lg_!col-start-5')
                  span Дата возврата<br> из&nbsp;ремонта
                .data-table__th.row-start-6.lg_row-start-1(class='lg_!col-start-6')
                  span Результат
                .data-table__td.row-start-1.lg_row-start-2(class='lg_!col-start-1')
                  span Рикта&nbsp;04/04
                .data-table__td.row-start-2.lg_row-start-2(class='lg_!col-start-2')
                  span NP-131/2022
                .data-table__td.row-start-3.lg_row-start-2(class='lg_!col-start-3')
                  span 24.02.2023
                .data-table__td.row-start-4.lg_row-start-2(class='lg_!col-start-4')
                  +btn('Показать причину','clean')(data-modal-open='repair-cause' class='data-table__link')
                .data-table__td.row-start-5.lg_row-start-2(class='lg_!col-start-5')
                  span 14.07.2022
                .data-table__td.row-start-6.lg_row-start-2(class='lg_!col-start-6')
                  +btn('Показать причину','clean')(data-modal-open='repair-cause' class='data-table__link')
        +consult({
          url: 'img/author_87x87.jpg',
          name: 'Иван Фабричный',
          text: 'Врач кардиолог',
          phone: '8 800 200 57 30'
        })(class='article__consult profile__consult')
